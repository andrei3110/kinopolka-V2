<%- include('../particles/header.ejs') %>   
    <div class="content">
        
        <%- include('../particles/tags.ejs') %>

        <% if (category == 1 || category == 2) { %>    
            <% for (let i=0; i < genres.length; i++) { %>
                <a href="/from/movies/<%= genres[i].id %>" >
                    <div class="genre__object" id="genres__object">
                        <h2 class="genres__name">
                            <%= genres[i].name %>
                        </h2>
        
                        
                    </div>
                </a>
                
            <% } %>
            <% } else if (category == 3) { %>
                <% for (let i=0; i < cartoonGenres.length; i++) { %>
                    <a href="/from/cartoons/<%= cartoonGenres[i].id %>" >
                        <div class="genre__object" id="genres__object">
    
                            <h2 class="genres__name">
                                <%= cartoonGenres[i].name %>
                            </h2>
                        </div>
                    </a>
                <% } %>
            <% } %>   
 
    </div>


<%- include('../particles/footer.ejs') %>