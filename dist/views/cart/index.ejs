<%- include('../particles/header.ejs') %>
<div class="content">
    <div class="film">
        <% for (let i=0; i < basket.length; i++) { %>

        <a href="/items/<%= basket[i].id %>/show" class="descrip">
            <div class="film__object">
                <h2 class="film__name">
                    <%= basket[i].name %>
                </h2>
                <div class="film__country">
                    <%= basket[i].country %>
                </div>

                <div class="film__genre">
                    <%= basket[i].genre %>
                </div>
                <img class="film__image" src="/img/<%= basket[i].image %>">
                <div>
                    <form action="/delete__Video/<%= basket[i].id %>" method="post">
                        <button class="delete__moves__basket" type="submit"><%- include('../icons/remove__icon__basket.ejs') %></button>
                    </form>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</div>

<%- include('../particles/footer.ejs') %>