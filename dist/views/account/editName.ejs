  <%- include('../particles/header.ejs') %>
  <div class="content">
    <center>
      <div class="block">
        <div class="title__edit">
          <h1>Давайте изменим ваше имя!</h1>
        </div>

        <form  class="form__data"  action="/editName" method="post">
          <input type="hidden" value="<%= users.id %>">

          <div class="group">
            <input class="input__edit" type="text" required  name="currentName">
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="lableText">Текущее имя</label>
          </div>

          <div class="group">
            <input class="input__edit" type="text" required name="lastName">
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="lableText">Новое имя</label>
          </div>

          <button class="btn__edit__profile" type="submit" value="Изменить">Изменить</button>
          <div class="links">
            <a href="/editProfile" class="editName">Изменить пароль</a>
            <a href="/editAvatar" class="editAvatar">Изменить аватар</a>
  
          </div>
        </form>
       
      </div>
    </center>

  </div>





