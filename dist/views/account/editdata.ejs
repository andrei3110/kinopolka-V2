<%- include('../particles/header.ejs') %>

<div class="content">

  <form action="/editAvatar" method="post" enctype="multipart/form-data">
    <input type='file' name="avatar" accept="image/png, image/jpeg">
    <input type="submit" value="Изменить">
  </form>

  <form action="/editPassword" method="post" >
    <input type='text' name="currentPassword">
    <input type='text' name="lastPassword">
    <input type="submit" value="Изменить">
  </form>

  <form action="/editName" method="post" >
    <input type="hidden" value="<%= users.id %>">
    <input type='text' name="currentName">
    <input type='text' name="lastName">
    <input type="submit" value="Изменить">
  </form>
 
</div>
<%- include('../particles/footer.ejs') %>